.goods_item{
  display: flex;
  border-bottom: 3rpx solid silver;
}
.item_imgs{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_img{
  width: 70%;
}
.item_content{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.price{
  color: var(--themeColor);
  font-size: 32rpx;
}