page{
  padding-bottom: 90rpx;
}
.goods_dswiper{
  height: 65vw;
  text-align: center;
}
.detail_img{
  width: 60%;
}
.detail_price{
  padding: 15rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.detail_name{
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 10rpx solid rgb(224, 224, 224);
  padding: 10rpx 0;
}
.d_name{
  flex: 5;
  color: #000;
  font-size: 30rpx;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail_icon{
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  border-left: 3rpx solid #000;
}
.icon-shoucangfill{
  color: var(--themeColor);
}
.text{
  text-align: center;
}
.goods_info_title{
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}
.btm_tools{
  width: 100%;
  height: 90rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  background-color: #fff;
  border-top: 2rpx solid #cccccc;
}
.cservice,
.share,
.shopping_cart{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.cservice button,
.share button,
.shopping_cart button{
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.cart_btn,
.buy_btn{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.cart_btn{
  background-color: #ffa500;
}
.buy_btn{
  background-color: var(--themeColor);
}