page{
  padding-bottom: 90rpx;
}
.user_info_row{
  display: flex;
  padding: 20rpx;
}
.user_info{
  flex: 5;
}
.user_phone{
  flex: 3;
  text-align: right;
}
.cart_title{
  font-size: 36rpx;
  padding: 20rpx;
  color: var(--themeColor);
  border-top: 1rpx solid rgb(224, 220, 220);
  border-bottom: 1rpx solid rgb(224, 220, 220);
}
.cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}
.cart_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_img_wrap image{
  width: 80%;
}
.cart_info_wrap{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.goods_price_wrap{
  display: flex;
  justify-content: space-between;
}
.goods_price{
  font-size: 34rpx;
  color: var(--themeColor);
}
.goods_tools{
  display: flex;
}
.goods_num{
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_null{
  font-size: 34rpx;
  color: var(--themeColor);
  font-weight: 600;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-left: -15%;
}
.footer_tools{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.total_price_wrap{
  flex: 5;
  padding-right: 15rpx;
  text-align: right;
}
.total_price_text{
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 500;
}
.freight{
  font-size: 22rpx;
  font-weight: 600;
}
.order_pay_warp{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
}