.collect_main{
  background-color: #f3f4f6;
}
.collect_title{
  padding: 35rpx 0;
}
.collect_tips{
  padding: 15rpx;
  border: solid 1rpx #ccc;
  margin-left: 25rpx;
  background-color: #fff;
}
.active{
  color: var(--themeColor);
  border-color: currentColor;
}
.collect_content{
  background-color: #fff;
}
.collect_item{
  display: flex;
  border-bottom: 3rpx solid silver;
}
.item_imgs{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.item_img{
  width: 70%;
}
.item_content{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.item_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.price{
  color: var(--themeColor);
  font-size: 32rpx;
}